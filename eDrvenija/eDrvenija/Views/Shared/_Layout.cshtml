<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
    @Styles.Render("~/Content/bootstrap.css")

</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Linkovi</li>
                        <li>@Html.ActionLink("Početna stranica", "../")</li>
                        <li>@Html.ActionLink("Oglasi", "../")</li>
                        <li>@Html.ActionLink("Korisnici", "../")</li>

                        <li class="nav-header">Informacije</li>
                        <li>@Html.ActionLink("Kontaktiraj nas", "../")</li>
                        <li>@Html.ActionLink("O nama", "../")</li>
                    </ul>
                </div>
            </div>
            <div class="span9">
                @RenderSection("featured", required: false)
                <div class="row-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
</body>
</html>
