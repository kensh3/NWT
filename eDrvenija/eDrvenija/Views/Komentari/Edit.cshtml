@model eDrvenija.eDrvenija.Models.komentari

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>komentari</legend>

        @Html.HiddenFor(model => model.idKomentara)

        <div class="editor-label">
            @Html.LabelFor(model => model.tekstKomentara)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tekstKomentara)
            @Html.ValidationMessageFor(model => model.tekstKomentara)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.aktivan)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.aktivan)
            @Html.ValidationMessageFor(model => model.aktivan)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idKorisnika, "korisnici")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idKorisnika", String.Empty)
            @Html.ValidationMessageFor(model => model.idKorisnika)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idOglasa, "oglasi")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idOglasa", String.Empty)
            @Html.ValidationMessageFor(model => model.idOglasa)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
