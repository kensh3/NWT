@model eDrvenija.eDrvenija.Models.korisnici
@using Recaptcha.Web.Mvc;

@{
    ViewBag.Title = @Resursi.Kreiraj;
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h2>@Resursi.Kreiraj</h2></div>
                    <div class="panel-body">
                        <fieldset>
                            <legend>@Resursi.Korisnici</legend>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.Ime</span>
                                    @Html.TextBoxFor(model => model.imeKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.imeKorisnika)

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.Prezime</span>
                                    @Html.TextBoxFor(model => model.prezimeKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.prezimeKorisnika)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.Email</span>
                                    @Html.TextBoxFor(model => model.eMailKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.eMailKorisnika)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.BrojTelefona</span>
                                    @Html.TextBoxFor(model => model.brojTelefonaKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.brojTelefonaKorisnika)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.Ocjena</span>
                                    @Html.TextBoxFor(model => model.ocjena, new { @class = "form-control" })
                                    <span class="input-group-addon">.00</span>
                                    @Html.ValidationMessageFor(model => model.ocjena)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.KorisnickoIme</span>
                                    @Html.TextBoxFor(model => model.korisnickoImeKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.korisnickoImeKorisnika)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">@Resursi.Lozinka</span>
                                    @Html.TextBoxFor(model => model.lozinkaKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.lozinkaKorisnika)
                                </div>
                            </div>



                            <div class="editor-label">
                                @Html.LabelFor(model => model.idTipaKorisnika, "idTipaKorisnika")
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("idTipaKorisnika", String.Empty)
                                @Html.ValidationMessageFor(model => model.idTipaKorisnika)
                            </div>


                            <div>
                                @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean)
                            </div>

                            <p>
                                <input type="submit" value="@Resursi.Kreiraj" />
                            </p>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
