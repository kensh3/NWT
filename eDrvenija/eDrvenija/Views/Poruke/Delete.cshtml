@model eDrvenija.eDrvenija.Models.poruke

@{
    ViewBag.Title = @Resursi.Obrisi;
}

<h2>@Resursi.Obrisi</h2>

<h3>@Resursi.ObrisiPitanje</h3>
<fieldset>
    <legend>@Resursi.Poruke</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.naslovPoruke)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.naslovPoruke)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.tekstPoruke)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.tekstPoruke)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.aktivan)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.aktivan)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.korisnici.imeKorisnika)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.korisnici.imeKorisnika)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.korisnici1.imeKorisnika)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.korisnici1.imeKorisnika)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="@Resursi.Obrisi" /> |
        @Html.ActionLink(@Resursi.NazadNaPocetnu, "Index")
    </p>
}
