<div ng-controller="UrediOglasController">
    <form ng-submit="urediOglas()">
        Id:{{oglas.idOglasa}}<br /><input type="hidden" ng-model="oglas.idOglasa" />
        Naziv: <input type="text" ng-model="oglas.nazivOglasa"> <br />
        Datum objave: {{oglas.datumObjaveOglasa}} <br /><input type="hidden" ng-model="oglas.datumObjaveOglasa" />
        Opis: <input type="text" ng-model="oglas.opisOglasa"> <br />
        Cijena: <input type="text" ng-model="oglas.cijena" />KM <br />
        Broj Pregleda: {{oglas.brojPregledaOglasa}} <br /><input type="hidden" ng-model="oglas.brojPregledaOglasa" />
        Tip oglasa: <input type="text" ng-model="oglas.idTipaOglasa" /> <br />
        Kategorija oglasa: <input type="text" ng-model="oglas.idKategorije" /> <br />
        Korisnik: {{oglas.idKorisnika}}<br/><input type="hidden" ng-model="oglas.idKorisnika" />
        <input type="submit" value="Spasi" />
</form>
    <button class="btn btn-danger" ng-click="brisiOglas()">Brisi</button>
</div>