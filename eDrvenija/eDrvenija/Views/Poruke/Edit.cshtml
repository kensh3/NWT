@model eDrvenija.eDrvenija.Models.poruke

@{
    ViewBag.Title = @Resursi.Uredi;
}

<h2>@Resursi.Uredi</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resursi.Poruke</legend>

        @Html.HiddenFor(model => model.idPoruke)

        <div class="editor-label">
            @Html.LabelFor(model => model.naslovPoruke)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.naslovPoruke)
            @Html.ValidationMessageFor(model => model.naslovPoruke)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tekstPoruke)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tekstPoruke)
            @Html.ValidationMessageFor(model => model.tekstPoruke)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.aktivan)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.aktivan)
            @Html.ValidationMessageFor(model => model.aktivan)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idKorisnikaPosiljaoca, "korisnici")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idKorisnikaPosiljaoca", String.Empty)
            @Html.ValidationMessageFor(model => model.idKorisnikaPosiljaoca)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idKorisnikaPrimaoca, "korisnici1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idKorisnikaPrimaoca", String.Empty)
            @Html.ValidationMessageFor(model => model.idKorisnikaPrimaoca)
        </div>

        <p>
            <input type="submit" value="@Resursi.Sacuvaj" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Resursi.NazadNaPocetnu, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
