@model eDrvenija.eDrvenija.Models.tipovikorisnika

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<div class="container">
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h2>@Resursi.Uredi tipa korisnika</h2></div>
                    <div class="panel-body">
                        <fieldset>
                            <legend>@Resursi.TipoviKorisnika</legend>

                            @Html.HiddenFor(model => model.idTipaKorisnika)

                            <div class="form-group">
                                <div class="input-group col-md-6">
                                    <span style="width:120px" class="input-group-addon">Ime</span>
                                    @Html.TextBoxFor(model => model.nazivTipaKorisnika, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.nazivTipaKorisnika)

                                </div>
                            </div>

                            

                            <p>
                                <input type="submit" value="@Resursi.Sacuvaj" />
                            </p>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    
   
}

<div>
    @Html.ActionLink(@Resursi.NazadNaPocetnu, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
