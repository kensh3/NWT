@model eDrvenija.eDrvenija.Models.tipovioglasa

@{
    ViewBag.Title = @Resursi.Uredi;
}

<h2>@Resursi.Uredi</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resursi.TipoviOglasa</legend>
        @Html.HiddenFor(model => model.idTipaOglasa)
        <div class="editor-label">
            @Html.LabelFor(model => model.nazivTipaOglasa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nazivTipaOglasa)
            @Html.ValidationMessageFor(model => model.nazivTipaOglasa)
        </div>

        <p>
            <input type="submit" value="@Resursi.Sacuvaj" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Resursi.NazadNaPocetnu, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
