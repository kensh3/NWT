<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    @Styles.Render("~/Content/bootstrap.css")
    @RenderSection("Scripts", false)
</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">@Resursi.Linkovi</li>
                        <li>@Html.ActionLink(@Resursi.Index, "../")</li>
                        <li>@Html.ActionLink(@Resursi.Oglasi, "../")</li>
                        <li>@Html.ActionLink(@Resursi.Korisnici, "../")</li>

                        <li class="nav-header">@Resursi.Informacije</li>
                        <li>@Html.ActionLink(@Resursi.KontaktirajNas, "../")</li>
                        <li>@Html.ActionLink(@Resursi.Onama, "../")</li>
                    </ul>
                </div>
            </div>
            <div class="span9">
                @RenderSection("featured", required: false)
                <div class="row-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
</body>
</html>
