<div class="container">
    <div class="row">
        <div class="col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h2>Tipovi korisnika</h2></div>
                <div class="panel-body">
                    <table class="table table-striped  table-condensed">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nazivTipaKorisnika)
                            </th>
                            <th>Akcije</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nazivTipaKorisnika)
                                </td>
                                <td>
                                    @Html.ActionLink(@Resursi.Uredi, "Edit", new { id = item.idTipaKorisnika }, new { @class = "btn btn-primary btn-sm" }) 
                                    @Html.ActionLink(@Resursi.Detalji, "Details", new { id = item.idTipaKorisnika }, new { @class = "btn btn-info btn-sm" }) 
                                    @Html.ActionLink(@Resursi.Obrisi, "Delete", new { id = item.idTipaKorisnika }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }

                    </table>
                    <div>
                        <p>
                            @Html.ActionLink("Kreiraj", "Create", null, new { @class = "btn btn-success btn-lg" })

                        </p>
                    </div>
                </div>
            </div>
        </div>
