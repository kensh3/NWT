@model IEnumerable<eDrvenija.eDrvenija.Models.kategorije>

@{
    ViewBag.Title = @Resursi.Index;
}

<h2>@Resursi.Index</h2>

<p>
    @Html.ActionLink(@Resursi.KreirajNovi, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazivKategorije)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazivKategorije)
        </td>
        <td>
            @Html.ActionLink(@Resursi.Uredi, "Edit", new { id = item.idKategorije }) |
            @Html.ActionLink(@Resursi.Detalji, "Details", new { id = item.idKategorije }) |
            @Html.ActionLink(@Resursi.Obrisi, "Delete", new { id = item.idKategorije })
        </td>
    </tr>
}

</table>
